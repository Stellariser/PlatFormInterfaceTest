<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kaung.mapper.UserMapper">

    <resultMap id="UserResultMap" type="com.kaung.pogo.User">
        <id column="id" jdbcType="BIGINT"  property="id"/>
        <result column="name" jdbcType="VARCHAR"  property="name"/>
        <result column="password" jdbcType="VARCHAR"  property="password"/>
        <result column="status" jdbcType="BIGINT"  property="status"/>
    </resultMap>

    <insert id="addUser" parameterType="com.kaung.pogo.User">
        insert into t_user (name, password, status) values (#{name},#{password},#{status})
    </insert>

    <delete id="deleteUserById" parameterType="int">
        delete from t_user where id = #{id};
    </delete>

    <update id="updateUser" parameterType="com.kaung.pogo.User">
        update t_user set name=#{name} ,password=#{password},status=#{status}  where id =#{id}
    </update>


    <select id="queryUserById" resultMap="UserResultMap">
        select *from t_user where id=#{id}
    </select>

    <select id="queryAllUser" resultMap="UserResultMap">
        select * from t_user <!--where 1=1
        <if test="query != null"> and name like '%${query}%'</if>-->
    </select>

    <select id="queryUserByName" resultMap="UserResultMap">
        select * from t_user where name=#{name}
    </select>

    <select id="queryAllUserPage" resultMap="UserResultMap">
        select * from t_user
    </select>

    <select id="queryUserVague" resultMap="UserResultMap" parameterType="com.kaung.pogo.QueryInfo">
        select * from t_user where 1=1
        <if test="query != null"> and name like '%${query}%'</if>
    </select>

</mapper>
