<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kaung.mapper.TagToFrameMapper">

    <insert id="addTagToFrame" parameterType="com.kaung.pogo.TagToFrame">
        insert into t_tag_to_frame (tag_id, frame_id) values (#{tag_id},#{frame_id})
    </insert>

    <delete id="deleteTagToFrameById" parameterType="int">
        delete from t_tag_to_frame where frame_id = #{frame_id};
    </delete>

    <update id="updateTagToFrame" parameterType="com.kaung.pogo.TagToFrame">
        update t_tag_to_frame set tag_id=#{tag_id} ,frame_id=#{frame_id} where id =#{id}
    </update>


    <select id="queryTagToFrameById" resultType="com.kaung.pogo.TagToFrame">
        select *from t_tag_to_frame where id=#{id}
    </select>

    <select id="queryAllTagToFrame" resultType="com.kaung.pogo.TagToFrame">
        select * from t_tag_to_frame
    </select>

    <select id="queryFrameToSceneByName" resultType="com.kaung.pogo.TagToFrame">
        select * from t_tag_to_frame where tag_id=#{tag_id}
    </select>
    <select id="getLastInsert" resultType="int">
        select LAST_INSERT_ID()
    </select>
</mapper>
